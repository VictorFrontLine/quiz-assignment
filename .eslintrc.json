{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["prettier", "plugin:react/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "react/react-in-jsx-scope": "off", // No longer required from React 17
        "prettier/prettier": "error"
    }
}
